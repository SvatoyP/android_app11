<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/conlay"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".app.main_window.CreateThemeActivity">

    <ImageView
        android:id="@+id/backArrow2"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="28dp"
        android:src="@drawable/ic_icone_leftarrow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="147dp"
        android:layout_height="29dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="174dp"
        android:fontFamily="@font/roboto_medium"
        android:text="Новая тема"
        android:textAlignment="textStart"
        android:textColor="@color/primary_text"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/backArrow2"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/pushButton2"
        android:layout_width="153dp"
        android:layout_height="41dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/roboto_medium"
        android:text="Опубликовать"
        android:textColor="@color/accent_1"
        android:textSize="14dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="132dp"
        android:layout_height="23dp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="36dp"
        android:text="0/1000 символов"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/pushButton2"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/enterProblem1"
        android:layout_width="355dp"
        android:layout_height="574dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="28dp"
        android:background="@color/white"
        app:layout_constraintBottom_toTopOf="@+id/pushButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/enterProblem"
            android:layout_width="match_parent"
            android:layout_height="568dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/white"
            android:fontFamily="@font/roboto_medium"
            android:gravity="top"
            android:hint="Опишите свою проблему"
            android:textColor="@color/primary_text"
            android:textSize="14dp" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>