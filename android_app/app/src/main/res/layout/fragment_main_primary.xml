<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_2"
    tools:context=".app.main_window.fragments.MainPrimaryFragment">

    <Button
        android:id="@+id/populButton2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/background_2"
        android:fontFamily="@font/roboto_medium"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Популярные"
        android:textColor="@color/primary_text"
        android:textSize="14dp"
        app:cornerRadius="5dp"
        app:layout_constraintStart_toEndOf="@+id/newButton"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
        app:rippleColor="@color/gray_1"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/izbrButton2"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="2dp"
        android:backgroundTint="@color/background_2"
        android:fontFamily="@font/roboto_medium"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Избранное"
        android:textColor="@color/primary_text"
        android:textSize="14dp"
        app:cornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/populButton2"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
        app:rippleColor="@color/gray_1"
        tools:ignore="TouchTargetSizeCheck" />

    <Button
        android:id="@+id/newButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/background_2"
        android:fontFamily="@font/roboto_medium"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:text="Новые"
        android:textColor="@color/primary_text"
        android:textSize="14dp"
        app:cornerRadius="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
        app:rippleColor="@color/gray_1"
        tools:ignore="TouchTargetSizeCheck" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout4"
        android:layout_width="407dp"
        android:layout_height="82dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchView"
            android:layout_width="308dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="21dp"
            android:background="@drawable/search_view_main"
            app:circularflow_radiusInDP="5dp"
            app:defaultQueryHint="Что вы ищите"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:searchHintIcon="@drawable/ic_searchsearch"
            app:searchIcon="@drawable/ic_searchsearch" />


        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="22dp"
            android:src="@drawable/ic_user_images_1useravatar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>